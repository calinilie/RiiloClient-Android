<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tutorial_navigate_to_write_post_dialog"
   	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:background="@drawable/card_background"
	android:layout_margin="16dp"
	android:visibility="gone">
	
		<ImageView
	        android:id="@+id/image_reply_to_post"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:contentDescription="Riilo logo"
	        android:layout_marginTop="8dp"
	        android:background="@drawable/ic_menu_compose" />
   	    
   	    <TextView 
   	        android:id="@+id/text_view_above"
   	        android:layout_width="fill_parent"
   	        android:layout_height="wrap_content"
   	        android:layout_below="@+id/image_reply_to_post"
   	        android:padding="16dp"
   	        android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lets get started: to write a post press the button in the top right corner. Don't think about it, just do it!"
            android:contentDescription="@string/content_description_cancel_action" />
   	    
   	    <View 
   	        android:layout_height="1dp"
		    android:layout_width="fill_parent"
		    android:layout_above="@+id/button_close_tutorial_dialog"
		    android:background="@color/lightGrey"/>
   	    
   		<Button
		    android:id="@+id/button_close_tutorial_dialog"
		    android:layout_width="fill_parent"
		    android:layout_below="@+id/text_view_above"
		    android:layout_height="wrap_content"
		    android:background="@drawable/selector"
		    android:contentDescription="@string/content_description_cancel_action"
		    android:text="@string/tutorial_5_button" />
	    
</RelativeLayout>