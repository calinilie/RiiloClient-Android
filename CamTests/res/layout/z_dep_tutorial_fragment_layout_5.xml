<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutorial_layout_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/image_tutorial_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/content_description_tutorial_image"
        android:src="@drawable/six"
        android:layout_marginTop="32dp" />
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/thankyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/tutorial_5_title"
            android:layout_marginTop="16dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_tutorial_description"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingMultiplier="1.1"
            android:paddingTop="16dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingBottom="16dp"
            android:text="@string/tutorial_5" />

<!--         <Button
            android:id="@+id/button_end_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="32dp"
            android:text="@string/tutorial_5_button"
            android:visibility="visible" /> -->
            
            <Button
				android:id="@+id/button_end_tutorial"
				android:text="@string/tutorial_5_button"
				android:textColor="#FFFFFF"
				android:textSize="24sp"
				android:textAlignment="center"
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:layout_gravity="right"
	            android:layout_marginBottom="20dp"
	            android:layout_marginRight="32dp"
				android:background="@drawable/btn_red_round"
				android:shadowColor="@color/darkGrey"
				android:shadowDx="1"
				android:shadowDy="1"
				android:shadowRadius="1"
				/>
            
            
        
        
        

    </LinearLayout>

</LinearLayout>