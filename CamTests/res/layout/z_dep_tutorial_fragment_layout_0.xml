<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutorial_layout_content0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/image_tutorial_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:contentDescription="@string/content_description_tutorial_image"
        android:src="@drawable/one" />
    
    <TextView
        android:id="@+id/text_tutorial_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_tutorial_image"
        android:layout_alignParentLeft="true"
        android:lineSpacingMultiplier="1.1"
        android:paddingBottom="16dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="16dp"
        android:text="@string/tutorial_0"
        android:textSize="14sp" />
    
    <RelativeLayout 
        android:id="@+id/tutorial_tutorial_swipe_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#66000000"
        android:visibility="visible">
    
	    <RelativeLayout
	        android:id="@+id/tutorial_swipe"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_margin="16dp"
	        android:background="@drawable/card_background"
	        android:visibility="gone" >
	
	        <ImageButton
	            android:id="@+id/button_close_tutorial_swipe"
	            android:layout_width="48dp"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:background="@drawable/selector"
	            android:contentDescription="@string/content_description_cancel_action"
	            android:padding="8dp"
	            android:src="@android:drawable/ic_menu_close_clear_cancel" />

	        <TextView
	            android:id="@+id/tutorial_swipe_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/button_close_tutorial_swipe"
	            android:padding="8dp"
	            android:text="@string/tutorial_tutorial_swipe_text"
	            android:visibility="visible" />

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/button_close_tutorial_swipe"
	            android:layout_alignParentLeft="true"
	            android:layout_toLeftOf="@+id/button_close_tutorial_swipe"
	            android:padding="8dp"
	            android:text="@string/info_dialog_heading"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        
	        	
	        <ImageView
	            android:id="@+id/swipe_with_hand"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/tutorial_swipe_title"
	            android:layout_centerHorizontal="true"
	            android:layout_margin="8dp"
	            android:contentDescription="@string/content_description_tutorial_image"
	            android:background="@drawable/image_slide_with_hand" />

	    </RelativeLayout>
    
    </RelativeLayout>

</RelativeLayout>