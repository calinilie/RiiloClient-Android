<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tutorial_click_post_to_see_location_dialog"
   	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:background="@drawable/card_background"
	android:layout_margin="16dp"
	android:visibility="visible">
	    
   	    <TextView
   	        android:id="@+id/text_view_above"
   	        android:layout_width="fill_parent"
   	        android:layout_height="wrap_content"
   	        android:layout_centerVertical="false"
   	        android:padding="16dp"
   	        android:textAppearance="?android:attr/textAppearanceMedium"
   	        android:text="Once the posts are loaded, you can tap a post in the list, to see its location on the map."
   	        android:contentDescription="@string/content_description_cancel_action" />

   	    <View 
   	        android:layout_height="1dp"
		    android:layout_width="fill_parent"
		    android:layout_above="@+id/button_close_tutorial_dialog"
		    android:background="@color/lightGrey"/>
   	    
		<Button
		    android:id="@+id/button_close_tutorial_dialog"
		    android:layout_width="fill_parent"
		    android:layout_below="@+id/text_view_above"
		    android:layout_height="wrap_content"
		    android:background="@drawable/selector"
		    android:contentDescription="@string/content_description_cancel_action"
		    android:text="OK" />
	    
</RelativeLayout>