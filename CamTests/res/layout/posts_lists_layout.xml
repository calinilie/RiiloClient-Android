<?xml version="1.0" encoding="utf-8"?>
<uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ptr_layout_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ListView
        android:id="@+id/posts_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
		android:dividerHeight="0dp"
		android:overScrollMode="never" >
    </ListView>
	
    <RelativeLayout 
        android:id="@+id/tutorial_swipe_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#66000000"
        android:visibility="gone">
    
	    <RelativeLayout
	        android:id="@+id/tutorial_swipe"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_margin="16dp"
	        android:background="@drawable/card_background"
	        android:visibility="visible" >
	
	        <ImageButton
	            android:id="@+id/button_close_tutorial_swipe"
	            android:layout_width="48dp"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:background="@drawable/selector"
	            android:contentDescription="@string/content_description_cancel_action"
	            android:padding="8dp"
	            android:src="@android:drawable/ic_menu_close_clear_cancel" />
	
	        <ImageView
	            android:id="@+id/swipe_with_hand"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/tutorial_swipe_title"
	            android:layout_centerHorizontal="true"
	            android:layout_margin="8dp"
	            android:contentDescription="@string/content_description_tutorial_image"
	            android:background="@drawable/tutorial_swipe_with_hand" />

	        <TextView
	            android:id="@+id/tutorial_swipe_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/button_close_tutorial_swipe"
	            android:padding="8dp"
	            android:text="@string/tutorial_swipe_text"
	            android:visibility="visible" />

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/button_close_tutorial_swipe"
	            android:layout_alignParentLeft="true"
	            android:layout_toLeftOf="@+id/button_close_tutorial_swipe"
	            android:padding="8dp"
	            android:text="@string/info_dialog_heading"
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	    </RelativeLayout>
    </RelativeLayout>   

   <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:gravity="center|center_horizontal" >
      
      <Button
        android:id="@+id/button_refresh"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/ic_menu_refresh" 
        />
        
   </RelativeLayout>

</uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout>
