<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/selectable_background_riilo" >
    
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="4dp"
		android:background="@drawable/card_background_achievement"
		android:paddingTop="16dp"
		android:paddingBottom="16dp">

		<!-- Card Contents -->
    
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginLeft="48dp">
	           
	    
	    <TextView
	        android:id="@+id/achievement_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:textSize="20sp"
	        android:textColor="@color/riilo_dark_red"
	        android:text="Achievement" />
	    
   	    <TextView
	        android:id="@+id/achievement_message"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />

	</LinearLayout>
	
   	</FrameLayout>
   	
   	<ImageView
   	    android:id="@+id/badge_riilo_first"
   	    android:layout_width="32dp"
   	    android:layout_height="32dp"
   	    android:layout_marginLeft="8dp"
   	    android:layout_gravity="center_vertical"
   	    android:contentDescription="Badge image"
   	    android:src="@drawable/ic_achievement_riilo" />

</FrameLayout>